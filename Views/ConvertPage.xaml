<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="PandocGUI.Views.ConvertPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PandocGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        AllowDrop="True"
        DragOver="OnDragOver"
        Drop="OnDrop">
        <StackPanel
            Padding="{StaticResource PagePadding}"
            Spacing="20"
            HorizontalAlignment="Stretch">
            <TextBlock Style="{StaticResource PageTitleText}" Text="转换" />
            <TextBlock Style="{StaticResource SubtleText}" Text="添加文件并开始转换" />

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Padding="{StaticResource CardPadding}" Spacing="12">
                    <TextBlock Style="{StaticResource SectionTitleText}" Text="转换控制" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.AddFilesCommand}"
                            Content="添加文件" />
                        <Button
                            Command="{x:Bind ViewModel.AddFolderCommand}"
                            Content="添加文件夹" />
                        <Button
                            Command="{x:Bind ViewModel.StartConversionCommand}"
                            Content="开始转换" />
                        <Button
                            Command="{x:Bind ViewModel.PauseQueueCommand}"
                            Content="暂停" />
                        <Button
                            Command="{x:Bind ViewModel.ResumeQueueCommand}"
                            Content="继续" />
                        <Button
                            Command="{x:Bind ViewModel.CancelConversionCommand}"
                            Content="取消" />
                        <ProgressRing
                            Width="20"
                            Height="20"
                            IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                            Visibility="{x:Bind ViewModel.BusyVisibility, Mode=OneWay}" />
                    </StackPanel>
                    <StackPanel Spacing="6">
                        <ProgressBar
                            Height="6"
                            Minimum="0"
                            Maximum="1"
                            Value="{x:Bind ViewModel.QueueProgress, Mode=OneWay}" />
                        <TextBlock
                            Style="{StaticResource SubtleText}"
                            Text="{x:Bind ViewModel.QueueProgressText, Mode=OneWay}" />
                        <TextBlock
                            Style="{StaticResource SubtleText}"
                            Text="{x:Bind ViewModel.QueueSummary, Mode=OneWay}" />
                        <TextBlock
                            Style="{StaticResource SubtleText}"
                            Text="{x:Bind ViewModel.QueueResultSummary, Mode=OneWay}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Padding="{StaticResource CardPadding}" Spacing="8">
                    <TextBlock Style="{StaticResource SectionTitleText}" Text="快速提示" />
                    <TextBlock Style="{StaticResource SubtleText}" Text="可直接拖拽文件或文件夹到此页面" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
