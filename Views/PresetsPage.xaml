<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="PandocGUI.Views.PresetsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PandocGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel
            Padding="{StaticResource PagePadding}"
            Spacing="20"
            HorizontalAlignment="Stretch">
            <TextBlock Style="{StaticResource PageTitleText}" Text="预设管理" />
            <TextBlock Style="{StaticResource SubtleText}" Text="管理输出预设，导入导出配置" />

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <Grid Padding="{StaticResource RowPadding}" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="Favorite" />
                        <TextBlock Grid.Column="1" Style="{StaticResource SectionTitleText}" Text="预设应用" />
                    </Grid>
                    <Border Style="{StaticResource SettingsRowDividerStyle}" />
                    <Grid Padding="{StaticResource RowPadding}" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="List" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="选择预设" />
                            <TextBlock Style="{StaticResource SubtleText}" Text="一键套用输出格式与参数" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <ComboBox
                                Width="220"
                                ItemsSource="{x:Bind ViewModel.Presets, Mode=OneWay}"
                                SelectedItem="{x:Bind ViewModel.SelectedPreset, Mode=TwoWay}"
                                DisplayMemberPath="Name" />
                            <Button
                                Command="{x:Bind ViewModel.ApplyPresetCommand}"
                                Content="应用" />
                            <Button
                                Command="{x:Bind ViewModel.BrowseTemplateCommand}"
                                Content="选择模板" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <Grid Padding="{StaticResource RowPadding}" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="Edit" />
                        <TextBlock Grid.Column="1" Style="{StaticResource SectionTitleText}" Text="自定义预设" />
                    </Grid>
                    <Border Style="{StaticResource SettingsRowDividerStyle}" />
                    <Grid Padding="{StaticResource RowPadding}" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="Edit" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="保存为预设" />
                            <TextBlock Style="{StaticResource SubtleText}" Text="保存当前参数为自定义预设" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <TextBox
                                Width="200"
                                Text="{x:Bind ViewModel.PresetName, Mode=TwoWay}"
                                PlaceholderText="预设名称" />
                            <Button
                                Command="{x:Bind ViewModel.SavePresetCommand}"
                                Content="保存" />
                            <Button
                                Command="{x:Bind ViewModel.RemovePresetCommand}"
                                Content="删除" />
                        </StackPanel>
                    </Grid>
                    <Border Style="{StaticResource SettingsRowDividerStyle}" />
                    <Grid Padding="{StaticResource RowPadding}" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="Save" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="预设导入/导出" />
                            <TextBlock Style="{StaticResource SubtleText}" Text="JSON 格式备份与共享" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button
                                Command="{x:Bind ViewModel.ImportPresetsCommand}"
                                Content="导入" />
                            <Button
                                Command="{x:Bind ViewModel.ExportPresetsCommand}"
                                Content="导出" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
