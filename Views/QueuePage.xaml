<?xml version="1.0" encoding="UTF-8" ?>
<Page
    x:Class="PandocGUI.Views.QueuePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:PandocGUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:PandocGUI.Models"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <StackPanel
            Padding="{StaticResource PagePadding}"
            Spacing="20"
            HorizontalAlignment="Stretch">
            <TextBlock Style="{StaticResource PageTitleText}" Text="队列" />
            <TextBlock Style="{StaticResource SubtleText}" Text="批量任务与状态追踪" />

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Padding="{StaticResource CardPadding}" Spacing="12">
                    <TextBlock Style="{StaticResource SectionTitleText}" Text="队列操作" />
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button
                            Command="{x:Bind ViewModel.AddFilesCommand}"
                            Content="添加文件" />
                        <Button
                            Command="{x:Bind ViewModel.AddFolderCommand}"
                            Content="添加文件夹" />
                        <Button
                            Command="{x:Bind ViewModel.RemoveSelectedCommand}"
                            Content="移除选中" />
                        <Button
                            Command="{x:Bind ViewModel.ClearQueueCommand}"
                            Content="清空队列" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <Grid Padding="{StaticResource RowPadding}" ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <SymbolIcon Symbol="Bullets" />
                        <StackPanel Grid.Column="1">
                            <TextBlock Style="{StaticResource SectionTitleText}" Text="转换队列" />
                            <TextBlock Style="{StaticResource SubtleText}" Text="选择任务查看详细状态" />
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                            <Button
                                Command="{x:Bind ViewModel.StartConversionCommand}"
                                Content="开始转换" />
                            <Button
                                Command="{x:Bind ViewModel.CancelConversionCommand}"
                                Content="取消" />
                            <ProgressRing
                                Width="20"
                                Height="20"
                                IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                                Visibility="{x:Bind ViewModel.BusyVisibility, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                    <Border Style="{StaticResource SettingsRowDividerStyle}" />
                    <ListView
                        Height="360"
                        ItemContainerStyle="{StaticResource SettingsListItemStyle}"
                        ItemsSource="{x:Bind ViewModel.Queue, Mode=OneWay}"
                        SelectedItem="{x:Bind ViewModel.SelectedItem, Mode=TwoWay}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:ConversionItem">
                                <Grid ColumnSpacing="12" RowSpacing="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock FontWeight="SemiBold" Text="{x:Bind FileName}" />
                                    <TextBlock Grid.Column="1" Text="{x:Bind Status}" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        FontSize="12"
                                        Opacity="0.7"
                                        Text="{x:Bind OutputPath}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        FontSize="12"
                                        Opacity="0.7"
                                        Text="{x:Bind Message}"
                                        TextWrapping="WrapWholeWords" />
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel Padding="{StaticResource CardPadding}" Spacing="12">
                    <TextBlock Style="{StaticResource SectionTitleText}" Text="日志" />
                    <TextBox
                        Height="180"
                        Text="{x:Bind ViewModel.LogText, Mode=OneWay}"
                        AcceptsReturn="True"
                        IsReadOnly="True"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
